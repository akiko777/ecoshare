<%= render "top/second-header" %>

<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %> 

    <h2 class='form-header-text'>会員情報入力</h2>
    <form>
      <div class="form-group">
        <label>メールアドレス</label>
        <%= f.email_field :email, class:"form-control form-control-lg", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="form-group">
        <label>パスワード</label>
        <%= f.password_field :password, class:"form-control form-control-lg", id:"password", placeholder:"半角英数6文字以上" %>
      </div>
      <div class="section1 text-center">
        <%= f.submit "ログイン" ,class:"btn btn-info" %>
      </div>
    </form>
<% end %> 